		name="Elastic Server"
		target="$INSTALL_PATH\elastic.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start XEL server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
